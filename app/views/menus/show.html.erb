<%= content_for :content do %>
  <p>
    <strong>Name:</strong>
    <%= @menu.name %>
  </p>

  <p>
    <strong>Intro:</strong>
    <%= @menu.intro %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @menu.price %>
  </p>

  <p>
    <strong>Store:</strong>
    <%= @menu.store.store_and_user %>
