<%= content_for :content do %>

  <div class="container">
    <div class="row">
      <div class="col-3">
        <div class="pictures">
          <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              <% @menu.pictures.count.times do |index| %>
                <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>"
                    class="<%= 'active' if index == 0 %>"></li>
              <% end %>
            </ol>
            <div class="carousel-inner">
              <% @menu.pictures.each_with_index do |picture, i| %>
                <div class="carousel-item <%= 'active' if i == 0 %>">
                  <%= image_tag picture.url, class: 'd-block w-100' %>
                </div>
              <% end %>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
      </div>

      <div class="col-9">
        <table class="table">
          <tbody>
          <tr>
            <th>菜名：</th>
            <td><%= @menu.name %></td>
          </tr>
          <tr>
            <th>价格：</th>
            <td>¥<%= @menu.price / 100.to_f %> 元</td>
          </tr>
          <tr>
            <th>商铺：</th>
            <td><%= @menu.store.name %></td>
          </tr>
          <tr>
            <th>店家：</th>
            <td><%= @menu.store.user.email %></td>
          </tr>
          <tr>
            <th>介绍：</th>
            <td><pre><%= truncate @menu.intro %></pre></td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
